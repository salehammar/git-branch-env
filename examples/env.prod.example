# Production Environment Variables
# Overrides base environment for production

# Database
DATABASE_URL=postgres://prod_user:${DB_PASSWORD}@prod-db.example.com:5432/myapp_prod
DB_HOST=prod-db.example.com
DB_PORT=5432
DB_NAME=myapp_prod
DB_USER=prod_user
DB_PASSWORD=${PROD_DB_PASSWORD}

# API Configuration
API_KEY=${PROD_API_KEY}
API_URL=${BASE_URL}/${API_VERSION}/prod

# Performance & Security
DEBUG=false
LOG_LEVEL=warn
ENABLE_DEBUG_MODE=false

# Production Features
ENABLE_HOT_RELOAD=false
ENABLE_MOCK_DATA=false
ENABLE_ANALYTICS=true

# External Services (Production)
REDIS_URL=redis://prod-redis.example.com:6379/0
ELASTICSEARCH_URL=https://prod-elasticsearch.example.com

# Security (Production - use strong secrets)
JWT_SECRET=${PROD_JWT_SECRET}
SESSION_SECRET=${PROD_SESSION_SECRET}

# Feature Flags
ENABLE_NEW_UI=true
ENABLE_BETA_FEATURES=false

# Monitoring
ENABLE_METRICS=true
ENABLE_APM=true
SENTRY_DSN=${SENTRY_DSN}
